- var name = profile.name.first + " " + profile.name.last;
doctype
html(lang="en").resume
	head
		meta(charset="utf-8")
		title= "Resume | " + name
		meta(name="author" content=name)
		meta(name="description" content="The online resume of " + name)
		meta(id="vp" name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		include includes/favicon
		include includes/jquery
		link(href="/css/style.css", rel="stylesheet")
		link(href="https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700%7CRoboto+Slab" rel="stylesheet")
	body
		#resume-container
			#profile-box
				.header
					img(src=profile.image alt="Image of Jack").profile-image
					hgroup
						h1.profile-name= profile.name.first + " " + profile.name.last
						h2.profile-title= profile.title
				.details
					.links
						ul
							each link_detail, link_name in links
								li.link
									a(href=link_detail.href)
										img(src=link_detail.icon alt=link_name + " icon").icon
										span.capitalize= link_name
			#main-box
				mixin sectionTitle(imgSrc, imgAlt, title)
					.section-title
						img(src=imgSrc alt=imgAlt).icon
						h3= title
				.section#bio
					+sectionTitle("/images/person.svg", "Person icon", "ABOUT ME")
					p.section-description= profile.bio
				.section#education
					+sectionTitle("/images/beaker.svg", "Beaker icon", "DEGREES")
					ul
						each school, school_no in degrees
							li
								.header
									span.title= school.degree_short + " in " + school.major
									span= moment(school.start_date).format("MMMM YYYY") + " - " + moment(school.end_date).format("MMMM YYYY")
									span= school.name
									span.location= school.location.city + ", " + school.location.state
				.section#courses
					+sectionTitle("/images/paperclip.svg", "Paperclip icon", "COURSES")
					ul
						each category_courses, course_category in courses
							li.category
								h4.title= course_category
								ul
									each course, course_no in category_courses
										li.tooltip-container
											span= course.shortName
											.tooltip
												.tooltip-box
													h5.tooltip-title= `${course.id}: ${course.name}`
													p.tooltip-body= course.description

												//- span= course.shortName
												//- img.course-caret-right(src="/images/caret-right.svg" alt="Right caret")
				.section#experiences
					+sectionTitle("/images/briefcase.svg", "Briefcase icon", "EXPERIENCES")
					ul
						each experience, experience_no in experiences
							li
								details
									summary.header
										span.title= experience.title
										span= moment(experience.start_date).format("MMMM YYYY") + " - " + moment(experience.end_date).format("MMMM YYYY")
										span= experience.company
										span.location= experience.location.city + ", " + experience.location.state
									p.section-row-description= experience.description
				.section#projects
					+sectionTitle("/images/fork.svg", "Fork icon", "PROJECTS")
					ul
						each project, project_no in projects
							li
								details
									summary.header
										span.title= project.name
										span= moment(project.start_date).format("MMMM YYYY") + " - " + moment(project.end_date).format("MMMM YYYY")
									p.section-row-description= project.description
				.section#skills
					+sectionTitle("/images/terminal.svg", "Terminal icon", "SKILLS")
					ul
						each skill_list, skill_category in skills
							li
								h4.title= skill_category
								ul
									each skill_detail, skill in skill_list
										li
											.skill
												span.skill-name= skill
												span.skill-level= '★'.repeat(skill_detail.level) + '☆'.repeat(5-skill_detail.level)
		footer
			a(href="https://www.useiconic.com/open") Icons from Open Iconic
			span= " | "
			span Updated August 2018
