#contact-box
	span.title Contact
	form#contact-form(method="post" action="/contact/")
		.form-row
			.form-group
				label(for="contact-form-name") Your Name
				input#contact-form-name(type="text" name="name" maxlength=maxNameLength placeholder="John Doe" required)
			.form-group
				label(for="contact-form-email") Your Email
				input#contact-form-email(type="email" name="email" maxlength=maxEmailLength placeholder="name@example.com" required)
		.form-group.message
			label(for="contact-form-message") Message
			textarea#contact-form-message(name="message" maxlength=maxMessageLength placeholder="Your Message" required)
		//- Honeypot for bots. This is hidden.
		input.h0n3yp0t(type="text" name="website" value="" style="display: none;")
		button#contact-submit-button
			span SEND
			// From tailspin at https://github.com/SamHerbert/SVG-Loaders
			svg.loading-spinner(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 38 38")
				defs
					linearGradient#a(x1="8.042%" y1="0%" x2="65.682%" y2="23.865%")
						stop(stop-color="currentColor" stop-opacity="0" offset="0%")
						stop(stop-color="currentColor" offset="100%")
				g(fill="none")
					g(transform="translate(1 1)")
						path#Oval-2(d="M36 18c0-9.94-8.06-18-18-18" stroke="url(#a)" stroke-width="2")
						circle(cx="36" cy="18" r="1")
